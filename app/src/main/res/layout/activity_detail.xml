<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:adjustViewBounds="true"
            android:background="@color/colorPic"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:cropToPadding="true"
            android:fadingEdge="vertical"
            android:padding="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/also_known_tv_label"
            />

        <TextView
            android:id="@+id/also_known_tv_label"
            style="@style/DetailLabelStyle"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_iv"
            app:layout_constraintRight_toLeftOf="@+id/also_known_tv"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginTop="8dp"
            android:text="@string/detail_also_known_as_label"
             />

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="11dp"
            app:layout_constraintBottom_toTopOf="@+id/origin_tv"
            app:layout_constraintStart_toEndOf="@+id/also_known_tv_label"
            app:layout_constraintTop_toBottomOf="@+id/image_iv"
            app:layout_constraintBaseline_toBaselineOf="@+id/also_known_tv_label"
            tools:text="Also known as data" />

        <TextView
            android:id="@+id/origin_tv_label"
            style="@style/DetailLabelStyle"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/detail_place_of_origin_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/also_known_tv" />

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/origin_tv_label"
            app:layout_constraintLeft_toRightOf="@id/origin_tv_label"
            app:layout_constraintTop_toBottomOf="@+id/also_known_tv"
            tools:text="Origin data" />

        <TextView
            android:id="@+id/description_tv_label"
            style="@style/DetailLabelStyle"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/detail_description_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/origin_tv" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/origin_tv"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            app:layout_constraintLeft_toRightOf="@id/description_tv_label"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_marginRight="53dp"
            android:layout_marginEnd="53dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="2dp"
            tools:text="Description data" />

        <TextView
            android:id="@+id/ingredients_tv_label"
            style="@style/DetailLabelStyle"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/detail_ingredients_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_tv" />

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@id/ingredients_tv_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_tv"
            tools:text="Ingredients data" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>